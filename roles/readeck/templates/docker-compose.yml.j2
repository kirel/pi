---
version: '3.8'
services:
  readeck:
    image: codeberg.org/readeck/readeck:latest
    container_name: readeck
    restart: unless-stopped
    environment:
      # Defines the application log level. Can be error, warn, info, debug.
      - READECK_LOG_LEVEL=info
      # The IP address on which Readeck listens.
      - READECK_SERVER_HOST=0.0.0.0
      # The TCP port on which Readeck listens. Update container port above to match (right of colon).
      - READECK_SERVER_PORT=8000
    ports:
      - "{{ readeck_http_port }}:8000"
    volumes:
      - "{{ readeck_data_folder }}:/readeck"
    healthcheck:
      test: ["CMD", "/bin/readeck", "healthcheck", "-config", "config.toml"]
      interval: 30s
      timeout: 2s
      retries: 3
    labels:
      - homepage.group={{ services['readeck'].group }}
      - homepage.name={{ services['readeck'].name }}
      - homepage.href=https://{{ services['readeck'].domain }}
      - homepage.icon={{ services['readeck'].icon }}
      - homepage.server={{ inventory_hostname }}
      - homepage.container=readeck
