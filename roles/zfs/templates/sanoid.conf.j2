{% for dataset in zfs_datasets %}
[{{ dataset.name }}]
  use_template = production
  recursive = no

{% endfor %}

[template_production]
  frequently = 0
  hourly = {{ zfs_snapshot_schedule.hourly }}
  daily = {{ zfs_snapshot_schedule.daily }}
  weekly = {{ zfs_snapshot_schedule.weekly }}
  monthly = {{ zfs_snapshot_schedule.monthly }}
  yearly = 0
  autosnap = yes
  autoprune = yes
