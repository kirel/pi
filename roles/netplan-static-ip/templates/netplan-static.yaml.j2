network:
  version: 2
  ethernets:
    {{ netplan_interface }}:
      dhcp4: no
      addresses: [{{ netplan_address_cidr }}]
      routes:
        - to: default
          via: {{ netplan_gateway }}
      nameservers:
        addresses: {{ netplan_dns_servers | to_yaml | indent(width=6, first=false) }}
{% if netplan_wake_on_lan %}
      wakeonlan: true  # Ensure exactly 6 spaces before this line
{% endif %}
